{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">

        <h2>Category</h2>
        <div class="row">
            <div class="col-md-4">
                <a href="{{ url('category_add') }}" class="btn btn-success btn-lg">
                    <span class="glyphicon glyphicon-add"></span> Add Category
                </a>
            </div>
        </div>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.categoryName }}</td>
                    <td>
                        <a href="{{ path('category_edit',{'id': category.id }) }}" class="btn btn-info btn-lg">
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </a>
                        <a href="{{ path('category_remove',{'id': category.id }) }}" onclick="return confirm('{{ 'Are you sure you want to delete category ' ~ category.categoryName }}')" class="btn btn-danger btn-lg">
                            <span class="glyphicon glyphicon-remove"></span> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}
